extends layout

block content
    div#user_new_form
        form(method="POST", action="/user/create", role="form")
            div.form-group
                label email
                input.form-control(type="text", name="email")
            
            div.form-group
                label password
                input.form-control(type="password", name="password")

            input(type="submit", class="btn btn-lg btn-primary")